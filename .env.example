# Enterprise HRMS/CRM/PMS Backend Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Database Connection
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/enterprise_hrms

# JWT Secret Key - GENERATE A NEW ONE!
# Run: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=REPLACE_WITH_GENERATED_KEY_minimum_32_characters

# ===========================================
# SERVER CONFIGURATION
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=development

# ===========================================
# SECURITY
# ===========================================
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ===========================================
# EMAIL SMTP (Required for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourcompany.com
SMTP_FROM_NAME=Enterprise HRMS
SMTP_USE_TLS=true

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# ===========================================
# EMPLOYEE ID CONFIGURATION
# ===========================================
EMPLOYEE_ID_PREFIX=AW
EMPLOYEE_ID_LENGTH=4

# ===========================================
# OPTIONAL - Redis (for caching/rate limiting)
# ===========================================
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# OPTIONAL - Sentry (error tracking)
# ===========================================
# SENTRY_DSN=https://xxx@sentry.io/xxx
